<h1>All Albums</h1>
<div >
    <%= render 'search_results'%>
    <% @albums.each do |album| %>
    <div class="gallery_product col-lg-4 col-md-4 col-sm-4 col-xs-6 filter sprinkle">
        <div class="col-md-9">
            <h3><%= link_to album.title, album_path(album)  %></h3>
            <%= link_to album_path(album) do %>
            <%= image_tag album.title_photo %>
            <%end %>
        </div>
        <% if user_signed_in? %>
        <div class="col-md-3">
            <span style="float: right"><%= link_to 'Edit', edit_album_path(album) %>
                <%= link_to 'âœ•', album_path(album), method: :delete, remote: true, class: 'delete_post' %></span>
        </div>
        <% end %>
    </div>
    <% end %>
    <div id="infinite-scrolling">
        <%= will_paginate @albums %>
    </div>
</div>
