<h1>All Album</h1>

<div >
  <% @albums.each do |album| %>

  <div class="gallery_product col-lg-4 col-md-4 col-sm-4 col-xs-6 filter sprinkle">
    <div class="col-md-9">
      <h3><%= album.title %></h3>
      <%= link_to album.title, album_path(album), class: 'link' %>
        <%= image_tag album.photos.last.picture_url(:thumb) %>
    </div>
    <div class="col-md-3">

      <span style="float: right"><%= link_to 'Edit', edit_album_path(album) %> <%= link_to 'âœ•', album_path(album), method: :delete, remote: true, class: 'delete_post' %></span>

    </div>

  </div>



  <% end %>
</div>
