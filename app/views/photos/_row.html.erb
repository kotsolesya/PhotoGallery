<div class="photo">
  <%= link_to image_tag(photo.picture_url(:thumb)) , album_photo_path(photo)%>
  <div class="name"><%= photo.title %></div>
  <div class="actions">
    <%= link_to "edit", edit_album_photo_path(photo) %> |
    <%= link_to "remove", album_photo_path(@album, photo), :confirm => 'Are you sure?', :method => :delete %>

  </div>
</div>
